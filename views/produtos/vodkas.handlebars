<h1>Vodkas</h1>
<div class="container-cards">
    {{#each todosVodkas}}
        <div class="card">
            <div class="card-img">
                <img src="/img/vodkas/vodka_{{this.id}}.jpg" class="card-img-top" alt="vodka_{{this.id}}">
            </div>
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text">{{this.description}}</p>
                <p class="card-price">R${{this.price}}</p>
                <a href="#" class="btn btn-primary">Comprar</a>
            </div>
        </div>
    {{/each}}
</div>



